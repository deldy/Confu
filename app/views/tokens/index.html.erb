<h1>Listing tokens</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Badge</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tokens.each do |token| %>
  <tr>
    <td><%= token.code %></td>
    <td><%= token.badge %></td>
    <td><%= link_to 'Show', token %></td>
    <td><%= link_to 'Edit', edit_token_path(token) %></td>
    <td><%= link_to 'Destroy', token, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

